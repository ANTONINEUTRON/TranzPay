<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FundAcctActivity"
    android:padding="15dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You should use one of the means below to fund your account \n"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/std_elevation">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/cc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Debit Card (Mastercard/Visa)"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                android:id="@+id/card_digit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cc"
                android:hint="Card Number"
                android:inputType="number"/>
            <EditText
                android:id="@+id/amt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Amount"
                android:inputType="numberDecimal"
                app:layout_constraintTop_toBottomOf="@id/card_digit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cvv"
                />
            <EditText
                android:id="@+id/cvv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="CVV"
                android:inputType="number"
                app:layout_constraintTop_toBottomOf="@id/card_digit"
                app:layout_constraintStart_toEndOf="@id/amt"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <Button
                android:id="@+id/pay_thru_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fund Account"
                app:layout_constraintTop_toBottomOf="@id/cvv"
                android:layout_margin="@dimen/std_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:backgroundTint="@color/colorAccent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/std_elevation"
        android:layout_marginTop="@dimen/mid_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Transfer to your Virtual Account [9101549155, Sparkle Bank] \n to credit your Tranzpay Wallet"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/trsf_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="OK"
                android:backgroundTint="@color/colorAccent"
                android:layout_margin="@dimen/mid_margin"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>